// Reset
*
	box-sizing border-box
	margin 0
	padding 0

// Global styles
:root, html
	font-family sans-serif
	font-size 12pt
	
	color #333
	
	// Smooth scrolling to anchors
	scroll-behavior smooth
	
a
	text-decoration underline
	color orange

// Mixins
square()
	// https://spin.atomicobject.com/2015/07/14/css-responsive-square/
			
	&::after
		content ''
		display block
		padding-bottom 100%

heading-line(color, bg-color)
	display block
	
	text-align center
	
	color color
	border-bottom solid 3px color
	
	height 0.7em
	margin-bottom 0.7em

	> span
		display inline-block
		
		background-color bg-color
		
		padding 0 2rem	

// Utility classes
.a-reset
	text-decoration none
	color inherit
	
.text-stylise
	font-family 'Mr Dafoe', cursive
	position relative

.bg-image
	background-color #888
	background-size cover
	background-position center
	
.font-awesome
	font-family 'Font Awesome 5 Free'
	font-weight 900
	-moz-osx-font-smoothing grayscale
	-webkit-font-smoothing antialiased
	display inline-block
	font-style normal
	font-variant normal
	text-rendering auto
	line-height 1

// Components
.container
	max-width 800px
	margin 0 auto
	
.panel
	border-radius 0.3rem
	box-shadow 0 0.2rem 0.5rem rgba(black, 0.3)
	
ul.facilities
	gutter = 2rem

	list-style none
	margin none

	> li
		// Ensure box is large enough to contain square image
		min-height 160px
		
		padding 2rem 0

		> div.bg-image
			@extend .panel

			square()

			float right
			width 20%
			margin-left gutter
			margin-bottom gutter
			
	> li.flip
		> div.bg-image
			float left
			margin-left 0
			margin-right gutter
			
.contact-list
	font-size 1.2em

	> a
		padding-h = 0.5rem

		text-decoration none
		padding padding-h 0.8rem
		margin-left -(padding-h)
		margin-right 1rem
		
		// Will be limited to 50% of height
		border-radius 3rem
		
		transition all 0.3s ease
		
		&:hover
			color white
			background-color orange

			text-shadow 0 0 0.5rem orange

.bg-window
	@extend .bg-image

	background-attachment fixed
	height 25rem

// Body styles
	
header
	@extend .bg-image
	
	// Reference for chevron
	position relative

	color white
	background-color #666
	padding 1rem
	
	background-image url('https://images.unsplash.com/photo-1506026410707-9ae71625e5a1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2173&q=80')
	
	min-height 100vh
	
	a.advance
		color inherit
		background-color transparent
		
		position absolute
		bottom 0
		left 0
		right 0
		
		font-size 2em
		padding 0.5em
		
		text-align center
		
		transition all 0.2s ease

		&:hover
			background-color rgba(black, 0.3)

body > nav
	position fixed
	top 0
	left 0
	right 0
	
	z-index 10
	
	padding 0.5rem
	background-color white
	
	font-size 1em
	
	color rgb(156,160,88)
	text-shadow 0 -1px 0 rgba(black, 0.5)
	box-shadow 0 0 0.5rem rgba(black, 0.3)
	
	transition all 0.3s ease
	transition-property background-color, color, font-size, text-shadow, box-shadow

	> div
		@extend .container

		display flex
		flex-direction row
		justify-content space-between
		align-items center

		a
			@extend .a-reset
			
			font-weight bold
			
		h1
			@extend .text-stylise
			font-size 4em
			
body > nav.expand
	position absolute

	top 40vh
	background-color transparent
	
	font-size 1.25em
	
	color white
	text-shadow 0 0.2rem 0.5rem rgba(black, 0.5)
	box-shadow none
			
main
	> article
		> section
			@extend .container

		p
			padding 1rem 0
		
		h2
			@extend .text-stylise
			
			font-size 3em
			color #ccc
			
			// Overide .heading-line
			// margin-bottom 3rem !important

		h4
			color #aaa
	
section
	padding 3rem 0

	.heading-line
		heading-line(#ccc, white)