color-default = #444

container-width = 800px
handheld-mw = 500px
gutter = 1rem

section-padding = 3rem
section-padding-handheld = 1.5rem

// Reset
*
	box-sizing border-box
	margin 0
	padding 0
	
// Mixins
min-height-by-width(pc)
	// https://spin.atomicobject.com/2015/07/14/css-responsive-square/
	// Requires element to be empty
	&::after
		content ''
		display block
		padding-bottom pc

square()
	min-height-by-width(100%)

heading-line(color, bg-color)
	gap = 40px

	// Grid layout
	// https://www.trysmudford.com/blog/css-header-legend/
	display grid
	grid-template-columns: minmax(gap, 1fr) auto minmax(gap, 1fr)
	align-items center
	text-align center
	grid-gap gap
	width 100%
	
	color color

	margin-bottom 0.4em
	
	// Line pseudo-elements
	&::before, &::after
		content ''
		border-top solid 3px color

// Utility classes
.a-reset
	text-decoration none
	color inherit
	
.text-stylise
	font-family 'Mr Dafoe', cursive
	line-height 1

.bg-image
	background-color #888
	background-size cover
	background-position center
	
.font-awesome
	font-family 'Font Awesome 5 Free'
	font-weight 900
	-moz-osx-font-smoothing grayscale
	-webkit-font-smoothing antialiased
	display inline-block
	font-style normal
	font-variant normal
	text-rendering auto
	line-height 1

.float-left
	float left
	margin-bottom gutter
	margin-right gutter
	
.float-right
	float right
	margin-bottom gutter
	margin-left gutter

.center
	text-align center
	
p.lead
	font-weight lighter
	font-size 1.2em

// Global styles
:root, html
	font-family sans-serif
	font-size 12pt
	
	color color-default
	
	// Smooth scrolling to anchors
	scroll-behavior smooth
	
	// Handheld overrides
	@media(max-width: handheld-mw)
		font-size 16pt
		
		// Reduce font size to fit
		nav h1
			font-size 20vw
		
		// Hide navbar links and expand main title
		nav a
			width 100%
			text-align center

			&:not(.mobile-keep)
				display none
				
		// Reduce section padding
		section
			padding-top section-padding-handheld
			padding-bottom section-padding-handheld
			
		// Hide blockquotes
		blockquote
			display none
		
		// Facilities	
		ul.facilities > li
			// Less padding
			padding-top 1rem
			padding-bottom 1rem

			// Larger images
			> div.bg-image
				width 35%
	
a
	text-decoration underline
	color orange


// Components
.container
	max-width container-width
	margin 0 auto
	
	overflow hidden
	
	// Vertical padding ensures that text is not ever against viewport edges
	padding-left 1rem
	padding-right 1rem
	
.panel
	border-radius 0.3rem
	box-shadow 0 0.2rem 0.5rem rgba(black, 0.3)
	
ul.facilities
	list-style none
	margin none

	> li
		padding-v = 1.5rem

		// Large enough to contain image
		// (Border-box sizing means that height includes padding
		mh = (container-width * 0.20) + (padding-v * 2)
		min-height mh
		
		// Stop image gutter from affecting next element
		margin-bottom gutter
		
		padding padding-v 0

		> div.bg-image
			@extend .panel

			square()

			float right
			width 20%
			margin-left gutter
			margin-bottom gutter
			
	> li.flip
		> div.bg-image
			float left
			margin-left 0
			margin-right gutter
			
.contact-list
	font-size 1.2em
	
	// white-space nowrap

	> a
		padding-h = 0.5rem
		
		display inline-block

		text-decoration none
		padding padding-h 0.8rem
		margin-left -(padding-h)
		margin-right 1rem
		
		// Will be limited to 50% of height
		border-radius 3rem
		
		transition all 0.3s ease
		
		&:hover
			color white
			background-color orange

			text-shadow 0 0 0.5rem orange

.bg-window
	@extend .bg-image

	background-attachment fixed
	height 50vh
	
blockquote
	col = lighten(color-default, 65%)
	color col

	padding 0 2.5rem
	
	// Provide reference for pseudo-elements
	position relative

	cite
		display block
		font-size 0.8em
		text-align right
		
		margin-top 0.5rem
		
		&:before
			content '- '
		
	
	&::before, &::after
		position absolute
		font-size 4em
		line-height 1
		top 0
		
	&::before
		content '\201C'
		left 0
		
	&::after
		content '\201D'
		right 0

// Body styles
	
header
	@extend .bg-image
	
	// Reference for chevron
	position relative

	color white
	background-color #666
	padding 1rem
	
	min-height 100vh
	
	a.advance
		color inherit
		background-color transparent
		
		position absolute
		bottom 0
		left 0
		right 0
		
		font-size 2em
		padding 0.5em
		
		text-align center
		
		transition all 0.2s ease

		&:hover
			background-color rgba(black, 0.3)

footer
	padding 2rem

	color #ccc
	
	border-top dashed 2px #ccc
	//background-color #444
	
	//box-shadow inset 0 1rem 2rem rgba(black, 80%)

body > nav
	position fixed
	top 0
	left 0
	right 0
	
	// Above leaflet map
	z-index 5000
	
	padding 0.5rem
	background-color white
	
	font-size 1em
	
	color rgb(156,160,88)
	text-shadow 0 -1px 0 rgba(black, 0.5)
	box-shadow 0 0 0.5rem rgba(black, 0.3)
	
	transition all 0.3s ease
	transition-property background-color, color, font-size, text-shadow, box-shadow

	> div
		@extend .container

		display flex
		flex-direction row
		justify-content space-between
		align-items center

		a
			@extend .a-reset
			
			font-weight bold
			
		h1
			@extend .text-stylise
			font-size 4em
			
body > nav.expand
	position absolute

	top 40vh
	background-color transparent
	
	font-size 1.25em
	
	color white
	text-shadow 0 0.2rem 0.5rem rgba(black, 0.5)
	box-shadow none
			
main
	> article
		> section
			@extend .container

		p
			padding 1rem 0
		
		h2
			@extend .text-stylise
			
			font-size 3em
			color #ccc
			
			// Overide .heading-line
			// margin-bottom 3rem !important

		h4
			color #aaa
	
section
	// Vertical padding ensures that text is not ever against viewport edges
	padding-top section-padding
	padding-bottom section-padding
	
	.heading-line
		heading-line(#ccc, white)

div#map
	height 25rem